<h1>Bookings <%= link_to "+ New", new_booking_path %></h1>

<div class="row">
  <div class="hidden-xs col-sm-3">
    <h3>Booking date</h3>
  </div>
  <div class="hidden-xs col-sm-3">
    <h3>cleaner name</h3>
  </div>
  <div class="hidden-xs col-sm-3">
    <h3>city</h3>
  </div>
</div>
    
<% @bookings.each do |booking| %>
<div class="row">
  <div class="hidden-xs col-sm-3">
    <p><%= booking.booking_time %></p>
 </div>

  <div class="hidden-xs col-sm-3">
    <%= booking.cleaner.first_name %>
  </div>
    
  <div class="hidden-xs col-sm-3">
    <%= booking.city.city %>
	<%= link_to "Delete", booking, method: :delete, class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this city?" } %>  
 </div>
</div>
  
<% end %>